    forward_return = (close[stats_forward_bars] - close) / close[stats_forward_bars] * 100  // åšç©ºæ”¶ç›Š
    ext_ob_count := ext_ob_count + 1
    ext_ob_total_return := ext_ob_total_return + forward_return
    if forward_return > 0
        ext_ob_win_count := ext_ob_win_count + 1

